<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Formula 1 Drivers"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView7"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:singleLine="false" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriverName"
        android:layout_alignBottom="@+id/textView7"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Surname"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpdateDriverSurname"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Country"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpdateDriverCountry"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/txtUpdateDriverSurname"
        android:layout_alignStart="@+id/txtUpdateDriverSurname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team"
        android:id="@+id/textView10"
        android:layout_below="@+id/txtUpdateDriverCountry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpdateDriverTeam"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/txtUpdateDriverCountry"
        android:layout_alignStart="@+id/txtUpdateDriverCountry"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:layout_alignRight="@+id/txtUpdateDriverCountry"
        android:layout_alignEnd="@+id/txtUpdateDriverCountry" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new Driver"
        android:id="@+id/btnUpdateAddDriver"
        android:layout_below="@+id/txtUpdateDriverTeam"
        android:layout_marginTop="30dp"
        android:onClick="clickAddDriver"
        android:layout_alignRight="@+id/btnViewDrivers"
        android:layout_alignEnd="@+id/btnViewDrivers"
        android:layout_alignLeft="@+id/btnViewDrivers"
        android:layout_alignStart="@+id/btnViewDrivers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Drivers"
        android:id="@+id/btnViewDrivers"
        android:layout_below="@+id/btnUpdateAddDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="clickViewDrivers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Driver"
        android:id="@+id/btnGoToUpdateDriver"
        android:layout_below="@+id/btnViewDrivers"
        android:layout_alignLeft="@+id/btnViewDrivers"
        android:layout_alignStart="@+id/btnViewDrivers"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btnViewDrivers"
        android:layout_alignEnd="@+id/btnViewDrivers"
        android:onClick="clickUpdateDriver" />

</RelativeLayout>